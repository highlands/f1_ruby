.login
  .container
    %center
      .circle
        = image_tag("logo.png", :width => "65")
      %h3.blue Sign In to Your Account
    = form_tag f1.new_f1_user_session_path do
      = text_field_tag "user[username]", nil, :placeholder => "Username"
      = password_field_tag "user[password]", nil, :placeholder => "Password"
      = hidden_field_tag "redirect", @redirect if @redirect
      %center
        = link_to "Forget your password?", @forgot_password_url, :class => "forgot-password", :target => "_blank"
      = submit_tag "Sign In", :class => "submit"
      %center
        %hr
        %span.strike-through OR
        = link_to "Sign Up for a New Account", f1.new_f1_user_registration_path

